<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7F2A6C"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
         android:text="Welcome to Bill SplitIt App"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="#000"

        android:id="@+id/a1lltv1"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/a1ll2et1"
        android:hint=" eg, roadtrip,restaurent etc"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:id="@+id/a1ll2tv1"
        android:text="Enter your Trip name"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#0097a7"
        android:textSize="20dp"
        />
</LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    >
<EditText
android:layout_width="match_parent"
android:layout_height="50dp"
android:id="@+id/a1ll3et1"
android:hint=" 10"

android:layout_marginTop="10dp"
    />
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/a1ll3tv1"
android:text="Enter no of persons"
android:textStyle="bold"
android:textAlignment="center"
android:background="#0097a7"
    android:textSize="20dp"

    android:inputType="number"
    />
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="GO"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#3D6580 "
        android:id="@+id/a1ll1btn1"
        />



</LinearLayout>